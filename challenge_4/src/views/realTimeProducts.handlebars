<section class="container p-5 m-auto">
    <div class="jumbotron m-auto p-2">
        <h1>Proyecto</h1>
        <form action="/realtimeproducts" method="post">
            <!-- Campo nombre del producto -->
            <div class="form-group">
                <label for="name">Nombre</label>
                <input id="name" class="form-control" type="text" name="title" required />
            </div>

            <!-- Campo precio del producto -->
            <div class="form-group">
                <label for="price">Precio</label>
                <input id="price" class="form-control" type="number" step="0.01" name="price" required />
            </div>

            <!-- Campo codigo del producto -->
            <div class="form-group">
                <label for="code">Codigo de producto</label>
                <input id="code" class="form-control" type="text" name="code" />
            </div>

            <!-- Campo stock del producto -->
            <div class="form-group">
                <label for="stock">Indique el stock</label>
                <input id="stock" class="form-control" type="number" name="stock" />
            </div>

            <!-- Campo para indicar si status true o false del producto -->
            <div class="form-check">
                <label class="form-check-label" for="status">
                    Status
                </label>
                <input class="form-check-input" type="checkbox" value="status" id="status" checked>
            </div>

            <!-- Campo categoria del producto -->
            <div class="form-group">
                <label for="category">Indicar categoria del producto: </label>
                <input id="category" class="form-control" type="text" name="category" />
            </div>

            <!-- Campo descripcion del producto -->
            <div class="form-group">
                <label for="description">Indique una descripcion</label>
                <input id="description" class="form-control" type="text" name="description" />
            </div>

            <!-- Campo url de la foto del producto -->
            <div class="form-group">
                <label for="thumbnails">Foto URL</label>
                <input id="thumbnails" class="form-control" type="url" name="thumbnails" />
            </div>

            <!-- Botón de envío -->
            <button class="btn btn-success m-3">Enviar</button>
        </form>
        <div id="products"></div>
    </div>
</section>

<script src='/socket.io/socket.io.js'></script>
<script src='../public/index.js'></script>